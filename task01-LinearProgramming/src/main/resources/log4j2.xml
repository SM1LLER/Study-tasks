<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
	<Properties>
		<Property name="patternfull">
			%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{5} - %msg%n
		</Property>
		<Property name="patternshort">
			%d{HH:mm:ss.SSS} [%t] %-5level %logger{1} - %msg%n
		</Property>
		<Property name="patternio">
			%d{HH:mm:ss.SSS}: %msg%n
		</Property>
	</Properties>
	<Appenders>
		<File name="TxtFile" fileName="logs/text.log" bufferedIO="true">
			<PatternLayout pattern="${patternfull}" />
		</File>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="${patternshort}" />
		</Console>
		<Console name="InOut" target="SYSTEM_OUT">
			<PatternLayout pattern="${patternio}" />
		</Console>
	</Appenders>
	<Loggers>
		<Root level="error">
			<AppenderRef ref="Console"/>
		</Root>
		<Logger name="by.training.task01.implementation.LinearAlgorithmsCalculator" level="INFO"
				additivity="false">
			<AppenderRef ref="InOut" />
		</Logger>
	</Loggers>
</Configuration>
